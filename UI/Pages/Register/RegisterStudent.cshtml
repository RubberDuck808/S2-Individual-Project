@page "/register/student"
@model UI.Pages.Register.RegisterStudentModel
@{
    ViewData["Title"] = "Register as Student";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - UniNest</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .register-card {
            width: 100%;
            max-width: 550px;
            border-radius: 12px;
        }

        .form-label {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="card register-card shadow-sm p-4 bg-white">
        <div class="text-center mb-4">
            <h3 class="text-primary mb-0">Register as Student</h3>
            <small class="text-muted">Fill in your details to get started.</small>
        </div>

        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="StudentInput.FirstName" class="form-label"></label>
                <input asp-for="StudentInput.FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="StudentInput.FirstName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentInput.MiddleName" class="form-label"></label>
                <input asp-for="StudentInput.MiddleName" class="form-control" placeholder="Middle Name (optional)" />
                <span asp-validation-for="StudentInput.MiddleName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentInput.LastName" class="form-label"></label>
                <input asp-for="StudentInput.LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="StudentInput.LastName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentInput.Email" class="form-label"></label>
                <input asp-for="StudentInput.Email" type="email" class="form-control" placeholder="Email" />
                <span asp-validation-for="StudentInput.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentInput.PhoneNumber" class="form-label"></label>
                <input asp-for="StudentInput.PhoneNumber" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="StudentInput.PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentInput.DateOfBirth" class="form-label"></label>
                <input asp-for="StudentInput.DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="StudentInput.DateOfBirth" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentInput.Password" class="form-label"></label>
                <input asp-for="StudentInput.Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="StudentInput.Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="StudentInput.ConfirmPassword" class="form-label"></label>
                <input asp-for="StudentInput.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="StudentInput.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">
                Want to register as a landlord instead?
                <a href="/register/landlord">Click here</a>
            </small>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
