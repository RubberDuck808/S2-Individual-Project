@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<!-- Hero Section -->
<section class="full-width-breakout text-white text-center d-flex align-items-center justify-content-center min-vh-60"
         style="background: url('/images/hero_image3.jpg') no-repeat center center; background-size: cover;">

    <div class="container text-white py-5">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="fw-bold display-3 mb-4">Search. Apply. Move In.</h1>


                <!-- Search Bar -->
                <form method="get" asp-page="/Listings/Index" class="d-flex">
                    <input type="text" name="Search" class="form-control me-2" placeholder="Search by address" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>


            </div>
        </div>
    </div>
</section>







<!-- Featured Listings -->
<section class="container my-5">
    <div class="row">
        @foreach (var item in Model.Accommodations)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (item.ImageUrls?.Count > 0)
                    {
                        <img src="@item.ImageUrls.First()" class="card-img-top" alt="Image" />
                    }
                    else
                    {
                        <img src="~/images/NoImage.png" class="card-img-top" alt="No image" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">€@item.MonthlyRent /mo</h5>
                        <p class="card-text">
                            @item.Address @item.PostCode @item.City
                        </p>
                        <p class="card-text">@item.AccommodationType · @item.Size m²</p>
                        <a class="btn btn-outline-primary w-100" asp-page="/Listings/Detail" asp-route-id="@item.AccommodationId">View Full Listing</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>



<!-- Benefits Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Why Choose UniNest?</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <h4>No Paywalls</h4>
                <p>All listings are public. Students should never pay just to *see* available rooms.</p>
            </div>
            <div class="col-md-4">
                <h4>Verified Landlords</h4>
                <p>Every landlord is screened to avoid scams. You focus on studying, we handle trust.</p>
            </div>
            <div class="col-md-4">
                <h4>Transparent Pricing</h4>
                <p>No hidden agency fees, deposits, or misleading rent prices. What you see is what you pay.</p>
            </div>
        </div>
    </div>
</section>


<!-- FAQ Section -->
<section class="container mb-5">
    <h2 class="text-center mb-4">FAQ</h2>
    <div class="accordion" id="faq">
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading1">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
                    Is UniNest really free?
                </button>
            </h2>
            <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="heading1" data-bs-parent="#faq">
                <div class="accordion-body">
                    Yes. We don’t believe in charging students to view housing listings. All features are free.
                </div>
            </div>
        </div>

        <div class="accordion-item">
            <h2 class="accordion-header" id="heading2">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                    Can I trust the landlords?
                </button>
            </h2>
            <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="heading2" data-bs-parent="#faq">
                <div class="accordion-body">
                    Landlords are required to verify their identity before publishing listings.
                </div>
            </div>
        </div>
    </div>
</section>





<!-- Optional: Hover effect -->
<style>
    .hover-opacity:hover {
        opacity: 0.8;
    }
</style>


<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
