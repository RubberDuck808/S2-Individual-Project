@page
@model UI.Pages.RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="container">
    <div class="form-card">

        <!-- Step Progress (Optional visual) -->
        <div id="progress-bar">
            <div id="step-indicator">Step <span id="stepNum">1</span> of 4</div>
        </div>

        <!-- Step 1: Account Type -->
        <div class="step" id="step1">
            <h2>Select Account Type</h2>
            <button type="button" onclick="selectRole('student')">I'm a Student</button>
            <button type="button" onclick="selectRole('landlord')">I'm a Landlord</button>
            <div class="nav">
                <button type="button" onclick="nextStep()">Next</button>
            </div>
        </div>

        <!-- Step 2: Basic Info -->
        <div class="step" id="step2" style="display:none;">
            <h2>Basic Info</h2>
            <input type="text" name="FullName" placeholder="Full Name" />
            <input type="email" name="Email" placeholder="Email" />
            <input type="password" name="Password" placeholder="Password" />
            <input type="password" name="ConfirmPassword" placeholder="Confirm Password" />
            <div class="nav">
                <button type="button" onclick="prevStep()">Back</button>
                <button type="button" onclick="nextStep()">Next</button>
            </div>
        </div>

        <!-- Step 3: Extra Info (Student / Landlord) -->
        <div class="step" id="step3" style="display:none;">
            <h2>Additional Info</h2>

            <div id="studentFields" style="display:none;">
                <input type="text" name="University" placeholder="University" />
                <input type="date" name="DateOfBirth" placeholder="Date of Birth" />
                <input type="text" name="PhoneNumber" placeholder="Phone Number" />
                <input type="text" name="EmergencyContact" placeholder="Emergency Contact" />
                <input type="text" name="EmergencyPhone" placeholder="Emergency Contact Phone" />
            </div>

            <div id="landlordFields" style="display:none;">
                <input type="text" name="PhoneNumber" placeholder="Phone Number" />
                <input type="text" name="CompanyName" placeholder="Company Name (optional)" />
                <input type="text" name="VatNumber" placeholder="VAT/Chamber of Commerce No." />
            </div>

            <div class="nav">
                <button type="button" onclick="prevStep()">Back</button>
                <button type="button" onclick="nextStep()">Next</button>
            </div>
        </div>

        <!-- Step 4: Confirmation -->
        <div class="step" id="step4" style="display:none;">
            <h2>Review & Submit</h2>
            <label>
                <input type="checkbox" name="Terms" /> I agree to the Terms and Privacy Policy
            </label>
            <div class="nav">
                <button type="button" onclick="prevStep()">Back</button>
                <button type="submit">Create Account</button>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        let currentStep = 1;
        let role = "";

        function showStep(step) {
            document.querySelectorAll('.step').forEach(s => s.style.display = 'none');
            document.getElementById('step' + step).style.display = 'block';
            document.getElementById('stepNum').innerText = step;
            currentStep = step;
        }

        function nextStep() {
            if (currentStep === 1 && !role) return alert("Please select a role first.");
            if (currentStep === 2 && role === "student") {
                document.getElementById("studentFields").style.display = 'block';
                document.getElementById("landlordFields").style.display = 'none';
            }
            if (currentStep === 2 && role === "landlord") {
                document.getElementById("studentFields").style.display = 'none';
                document.getElementById("landlordFields").style.display = 'block';
            }
            if (currentStep < 4) showStep(currentStep + 1);
        }

        function prevStep() {
            if (currentStep > 1) showStep(currentStep - 1);
        }

        function selectRole(selectedRole) {
            role = selectedRole;
            document.querySelectorAll('#step1 button').forEach(btn => btn.classList.remove("selected"));
            event.target.classList.add("selected");
        }
    </script>
}

<style>
    .form-card {
        max-width: 500px;
        margin: auto;
        padding: 2rem;
        background: white;
        border-radius: 10px;
    }

    input, button {
        display: block;
        margin: 1rem 0;
        width: 100%;
        padding: 0.75rem;
    }

        button.selected {
            background-color: #007bff;
            color: white;
        }

    .nav {
        display: flex;
        justify-content: space-between;
    }
</style>
