@page "/landlord/dashboard/account/edit"
@model UI.Pages.Dashboard.Landlord.AccountModel
@{
    ViewData["Title"] = "Edit Landlord Profile";
}

<h3>Edit Your Landlord Profile</h3>

<form method="post" asp-page-handler="EditBasic">
    <input type="hidden" asp-for="LandlordEditId" />

    <div>
        <label for="LandlordEditFirstName">First Name:</label>
        <input type="text" asp-for="LandlordEditFirstName" />
    </div>

    <div>
        <label for="LandlordEditMiddleName">Middle Name:</label>
        <input type="text" asp-for="LandlordEditMiddleName" />
    </div>

    <div>
        <label for="LandlordEditLastName">Last Name:</label>
        <input type="text" asp-for="LandlordEditLastName" />
    </div>

    <div>
        <label for="LandlordEditEmail">Email:</label>
        <input type="email" asp-for="LandlordEditEmail" />
    </div>

    <div>
        <label for="LandlordEditPhone">Phone Number:</label>
        <input type="tel" asp-for="LandlordEditPhone" />
    </div>

    <div>
        <label for="LandlordEditCompany">Company Name:</label>
        <input type="text" asp-for="LandlordEditCompany" />
    </div>

    <div>
        <label for="LandlordEditTaxNumber">Tax Identification Number:</label>
        <input type="text" asp-for="LandlordEditTaxNumber" />
    </div>

    <div>
        <label><strong>Verification Status:</strong></label>
        <span>@(Model.SelectedLandlord?.IsVerified == true ? "Verified" : "Unverified")</span>
    </div>

    <button type="submit">Save</button>
</form>
