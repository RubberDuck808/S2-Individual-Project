@page "/listings"
@model UI.Pages.Listings.IndexModel
@{
    ViewData["Title"] = "Listings";
}

<h2>Accommodation Listings</h2>

@if (Model.Accommodations.Count == 0)
{
    <p>No accommodations found.</p>
}
else
{
    <div class="listing-grid">
        @foreach (var item in Model.Accommodations)
        {
            <div class="listing-card">
                @if (item.ImageUrls?.Count > 0)
                {
                    <div class="image-gallery">
                        @foreach (var imageUrl in item.ImageUrls)
                        {
                            <img src="@imageUrl" alt="Accommodation image" class="listing-image" />
                        }
                    </div>
                }
                else
                {
                    <img src="~/images/NoImage.png" alt="No image available" class="listing-image" />
                }


                <h3>@item.Title</h3>
                <p>@item.Description</p>
                <p><strong>Rent:</strong> €@item.MonthlyRent</p>
                <p><strong>Max Occupants:</strong> @item.MaxOccupants</p>
                <p><strong>Available:</strong> @(item.IsAvailable ? "Yes" : "No")</p>
                <p><strong>Available From:</strong> @item.AvailableFrom.ToString("dd MMM yyyy")</p>
                <p><strong>University:</strong> @item.UniversityName</p>
                <p><strong>Address:</strong> @item.Address</p>
                <p><strong>Room Type:</strong> @item.AccommodationType</p>
                <p><strong>Size:</strong> @item.Size²</p>
                <p><strong>Amenities:</strong> @string.Join(", ", item.AmenityNames)</p>

                <a class="btn-view" asp-page="/Listings/Detail" asp-route-id="@item.AccommodationId">View Full Listing</a>

            </div>
        }
    </div>
}
